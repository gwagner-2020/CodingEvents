<h1>Add Event</h1>

<form method="post">
    <div class="form-group">
        <label>
            Event Name:
            <input name="name" type="text" class="form-control" />
        </label>
    </div>
    <div class="form-group">
        <label>
            Event Description:
            <input name="desc" type="text" class="form-control"/>
        </label>
    </div>
    <div>
        <label>
            <input type="submit" value="Add Event" />
        </label>
    </div>
</form>

