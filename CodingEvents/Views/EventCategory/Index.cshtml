@using CodingEvents.Models

@model List<EventCategory>
@* Refer to 'Model' variable as our list of categories *@

<h1>Event Categories</h1>

<table class="table table-striped table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <th>@category.Id</th>
            <th>@category.Name</th>
        </tr>
    }
</table>

